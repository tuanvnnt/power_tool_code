Date =
ADDCOLUMNS (
    CALENDAR (DATE(2020, 1, 1), DATE(2024, 12, 31)),
    "Day_Of_Month", DAY([Date]),
    "Month_Number_Of_Year", MONTH([Date]),
    "Year", YEAR([Date]),
    "Day_Of_Week_Number", WEEKDAY([Date], 2),
    "Month_Name", FORMAT([Date], "MMMM"),
    "Day_Name", FORMAT([Date], "dddd"),
    "Start_of_Week", [Date] - WEEKDAY([Date], 2) + 1,
    "Start_of_Month", DATE(YEAR([Date]), MONTH([Date]), 1),
    "Start_of_Quarter", DATE(YEAR([Date]), (INT((MONTH([Date]) - 1)/3) * 3) + 1, 1),
    "Start_of_Year", DATE(YEAR([Date]), 1, 1),
    "Quarter", QUARTER([Date]),
    "Weekend", IF(WEEKDAY([Date], 2) >= 6, "Weekend", "Weekday"),
    "Month_Short", FORMAT([Date], "MMM")
)

